{
  "name": "@jimmychu0807/index-tpl-crud",
  "version": "0.1.3",
  "description": "Script to update index.html of Parity projects that publish their rustdocs in github.",
  "packageManager": "yarn@3.0.2",
  "main": "src/index.js",
  "homepage": "https://github.com/jimmychu0807/index-tpl-crud",
  "repository": {
    "url": "git+https://github.com/jimmychu0807/index-tpl-crud.git",
    "type": "git"
  },
  "bin": "dist/esbuild/index.js",
  "files": [
    "dist/**/*"
  ],
  "author": "Jimmy Chu <jimmychu0807@gmail.com>",
  "license": "WTFPL",
  "scripts": {
    "clean": "rm -rf dist",
    "start": "yarn ts-node src/index.ts",
    "debug": "yarn build; node --inspect-brk dist/index.js",
    "lint": "yarn eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "yarn jest",
    "tsc-build:copy-tpl": "cp -rf src/templates dist/tsc",
    "tsc-build": "yarn tsc && yarn tsc-build:copy-tpl",
    "esbuild-build:copy-tpl": "cp -rf src/templates dist/esbuild",
    "esbuild-build": "node esbuild.js && yarn esbuild-build:copy-tpl",
    "build": "yarn clean && yarn esbuild-build",
    "build:all": "yarn clean && yarn esbuild-build && yarn tsc-build"
  },
  "dependencies": {
    "commander": "^8.2.0",
    "ejs": "^3.1.6",
    "jquery": "^3.6.0",
    "jsdom": "^18.0.0"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/ejs": "^3.1.0",
    "@types/jest": "^27.0.2",
    "@types/jquery": "^3.5.8",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^14.17.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "esbuild": "^0.13.10",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "bugs": {
    "url": "https://github.com/jimmychu0807/index-tpl-crud/issues"
  }
}
